<div class="container">

  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1 class="article-title">
          <span class="badge claps"><%= article.claps %></span>
          <% if current_page? articles_path %>
            <%= link_to article.title, article_path(article) %><br>
          <% else %>
            <%= article.title %><br>
          <% end %>
          <small>
            by <%= article.user.firstname %> <%= article.user.lastname[0] %>. |
            <%= time_ago_in_words(article.created_at) %> ago
          </small>
        </h1>
      </div>
    </div>
  </div>



  <div class="row">
      <% if current_page? articles_path %>
      <div class="col-md-12 sidebar-box">
        <%= article.content.html_safe %>
        <p class="read-more"><a href="#" class="button">Read More</a></p>
      </div>
      <% else %>
      <div class="col-md-12">
        <%= article.content.html_safe %>
      </div>

      <%= link_to "Clap <span class='badge claps'>#{article.claps}</span>".html_safe, clap_article_path(article), method: :put, class: 'btn btn-info', remote: true %>

      <% end %>
  </div>

</div>
